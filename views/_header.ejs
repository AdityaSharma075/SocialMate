<link rel="stylesheet" href="/css/header.css" />
<header id="layout-header">
  <nav>
    <div class="mini-logo">
      <p>
        <a href="/"> SocialMate </a>
      </p>
    </div>

    <div class="auth-links">
      <ul>
        <% if (locals.user){ %>
        <li>
          <a href="/user/profile/<%= user.id%>"><%= user.name %></a>
        </li>
        <li>
          <a href="/user/sign-out">Sign Out</a>
        </li>
        <% }else{ %>
        <li>
          <a href="/user/sign-in">Sign In</a>
        </li>
        <li>
          <a href="/user/sign-up">Sign Up</a>
        </li>

        <% } %>
      </ul>
    </div>
  </nav>
</header>
